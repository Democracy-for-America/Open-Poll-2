<p id="notice"><%= notice %></p>

<h1>Polls</h1>

<table>
  <thead>
    <tr>
      <th>Slug</th>
      <th>Title</th>
      <th>Subtitle</th>
      <th>End voting at</th>
      <th>Show results</th>
      <th>Results html</th>
      <th>Donate url</th>
      <th>Twitter message</th>
      <th>Index share title</th>
      <th>Index share description</th>
      <th>Vote share title</th>
      <th>Vote share description</th>
      <th>Promote share title</th>
      <th>Promote share description</th>
      <th>After action email fromline</th>
      <th>After action email subject</th>
      <th>After action email body</th>
      <th>Actionkit domain</th>
      <th>Actionkit page</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @polls.each do |poll| %>
      <tr>
        <td><%= poll.slug %></td>
        <td><%= poll.title %></td>
        <td><%= poll.subtitle %></td>
        <td><%= poll.end_voting_at %></td>
        <td><%= poll.show_results %></td>
        <td><%= poll.results_html %></td>
        <td><%= poll.donate_url %></td>
        <td><%= poll.twitter_message %></td>
        <td><%= poll.index_share_title %></td>
        <td><%= poll.index_share_description %></td>
        <td><%= poll.vote_share_title %></td>
        <td><%= poll.vote_share_description %></td>
        <td><%= poll.promote_share_title %></td>
        <td><%= poll.promote_share_description %></td>
        <td><%= poll.after_action_email_fromline %></td>
        <td><%= poll.after_action_email_subject %></td>
        <td><%= poll.after_action_email_body %></td>
        <td><%= poll.actionkit_domain %></td>
        <td><%= poll.actionkit_page %></td>
        <td><%= link_to 'Show', poll %></td>
        <td><%= link_to 'Edit', edit_poll_path(poll) %></td>
        <td><%= link_to 'Destroy', poll, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

