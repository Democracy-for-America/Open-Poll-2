<%= form_with(model: [:admin, poll, question, answer], local: true) do |form| %>
  <% if poll.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(poll.errors.count, "error") %> prohibited this poll from being saved:</h2>

      <ul>
        <% poll.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :field_value %>
    <%= form.text_field :field_value %>
  </div>

  <div class="field">
    <%= form.label :caption %>
    <%= form.text_field :caption %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.check_box :show_on_ballot %>
    <%= form.label :show_on_ballot %>
  </div>

  <div class="field">
    <%= form.check_box :show_in_results %>
    <%= form.label :show_in_results %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
