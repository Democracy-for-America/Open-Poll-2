<fieldset class="nested-fields">
  <div class="row">
    <div class="field three columns">
      <label>â†• Field name</label>
      <%= f.text_field :field_name %>
    </div>

    <div class="field nine columns">
      <%= f.label :question %>
      <%= f.text_field :question %>
    </div>
  </div>

  <% if f.object.persisted? %>
    <div class="field">
      <label><%= f.check_box :_destroy %> Delete</label>
    </div>
  <% end %>

  <%= f.hidden_field :position, class: "position" %>
</fieldset>
